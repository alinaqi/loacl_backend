# Project Info
PROJECT_NAME=LOACL Backend
PROJECT_DESCRIPTION=Local OpenAI Assistant API Backend
VERSION=0.1.0

# Environment
ENV=development
DEBUG=true

# API Configuration
API_V1_PREFIX=/api/v1

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000"]

# Supabase Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_key

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Database Configuration
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_JWT_SECRET=your_supabase_jwt_secret

# Application Configuration
APP_NAME=LOACL
APP_ENV=development  # development, staging, production
LOG_LEVEL=DEBUG  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Security
SECRET_KEY=generate_a_secure_secret_key_here
ALLOWED_HOSTS=localhost,127.0.0.1

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_DEFAULT=100/hour
RATE_LIMIT_GUEST=50/hour

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=pdf,txt,doc,docx,png,jpg,jpeg

# Session Configuration
GUEST_SESSION_EXPIRY=86400  # 24 hours in seconds
AUTH_SESSION_EXPIRY=2592000  # 30 days in seconds

# Monitoring
SENTRY_DSN=  # Optional
ENABLE_PERFORMANCE_MONITORING=False

# Cache Configuration
REDIS_URL=redis://localhost:6379/0  # Optional, if using Redis for caching 